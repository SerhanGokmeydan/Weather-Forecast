<!DOCTYPE html>
<html>
  <head>
    <title>Åžehir Koordinat Bilgileri</title>
    <link rel="stylesheet" href="/leaflet.css" />
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <form id="countries-form">
      <input type="text" id="countries-input" placeholder="Type a country name">
      <select id="countries-select">
        <option value="" selected disabled hidden>
          Please, select a country
        </option>
        <% for( let country of countries) { %>
        <option><%= country %></option>
        <% } %>
      </select>
    </form>
    <form id="states-form">
      <input type="text" id="states-input" placeholder="Type a state name">
      <select id="states-select"></select>
    </form>
    <form id="cities-form">
      <input type="text" id="cities-input" placeholder="Type a city name">
      <select id="cities-select"></select>
    </form>
    <div id="map"></div>
    <div id="weather-records">
      <div id="current-records">
        
      </div>
      <div id="hourly-records"></div>
      <div id="daily-records"></div>
    </div>

    <script src="/leaflet.js"></script>
    <script src="/axios.min.js"></script>
    <script src="/scripts/app.js"></script>
  </body>
</html>
