    </nav>
    <div id="loading-screen">
      <div class="spinner"></div>
    </div>
    <div class="weather-container">
      <div id="weather-info">
        <div>
          <h1 id="city-name">City name</h1>
          <h2 id="temperature">Temperature</h2>
        </div>
        <img src="" id="weather-icon"/>
      </div>
      <div id="hourly-records">
        <h2>Daily forecast</h2>
        <ul>
        </ul>
      </div>
      <div id="current-records">
        <h2>Air Conditions</h2>
        <div>
          <div id="apparent-temperature">
            <h3></i>Apparent temperature</h3>
            <p></p>
          </div>
          <div id="humidity">
            <h3>Humidity</h3>
            <p></p>
          </div>
          <div id="wind-speed">
            <h3>Wind speed</h3>
            <p></p>
          </div>
          <div id="wind-direction">
            <h3>Wind direction</h3>
            <p></p>
          </div>
          <div id="rain">
            <h3>Precipitation</h3>
            <p></p>
          </div>
          <div id="cloud-cover">
            <h3>Cloud cover</h3>
            <p></p>
          </div>
          <div id="pressure">
            <h3>Pressure</h3>
            <p></p>
          </div>
          <div id="snowfall">
            <h3>Snowfall</h3>
            <p></p>
          </div>
        </div>
      </div>
      <div id="daily-records">
        <h2>Weekly forecast</h2>
        <ul>
        </ul>
      </div>
    </div>
    <div class="map-container">
      <!-- countries dropdown menu -->
      <div id="countries-dropdown" class="dropdown-menu">
        <div class="selected-item">
          <input type="text" placeholder="Select a country" readonly />
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
            <path
              d="M137.4 374.6c12.5 12.5 32.8 12.5 45.3 0l128-128c9.2-9.2 11.9-22.9 6.9-34.9s-16.6-19.8-29.6-19.8L32 192c-12.9 0-24.6 7.8-29.6 19.8s-2.2 25.7 6.9 34.9l128 128z"
            />
          </svg>
        </div>
        <div class="dropdown-content">
          <div class="search-input">
            <input
              type="text"
              id="countries-input"
              placeholder="Type to filter countries"
            />
          </div>
          <ul class="dropdown-list"></ul>
        </div>
      </div>

      <!-- states dropdown menu -->
      <div id="states-dropdown" class="dropdown-menu">
        <div class="selected-item">
          <input type="text" placeholder="Select a state" readonly />
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
            <path
              d="M137.4 374.6c12.5 12.5 32.8 12.5 45.3 0l128-128c9.2-9.2 11.9-22.9 6.9-34.9s-16.6-19.8-29.6-19.8L32 192c-12.9 0-24.6 7.8-29.6 19.8s-2.2 25.7 6.9 34.9l128 128z"
            />
          </svg>
        </div>
        <div class="dropdown-content">
          <div class="search-input">
            <input
              type="text"
              id="states-input"
              placeholder="Type to filter states"
            />
          </div>
          <ul class="dropdown-list"></ul>
        </div>
      </div>

      <!-- cities dropdown menu -->
      <div id="cities-dropdown" class="dropdown-menu">
        <div class="selected-item">
          <input type="text" placeholder="Select a city" readonly />
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
            <path
              d="M137.4 374.6c12.5 12.5 32.8 12.5 45.3 0l128-128c9.2-9.2 11.9-22.9 6.9-34.9s-16.6-19.8-29.6-19.8L32 192c-12.9 0-24.6 7.8-29.6 19.8s-2.2 25.7 6.9 34.9l128 128z"
            />
          </svg>
        </div>
        <div class="dropdown-content">
          <div class="search-input">
            <input
              type="text"
              id="cities-input"
              placeholder="Type to filter countries"
            />
          </div>
          <ul class="dropdown-list"></ul>
        </div>
      </div>
      <div id="map"></div>
    </div>
    <script src="/leaflet.js"></script>
    <script src="/axios.min.js"></script>
    <script src="/scripts/app.js"></script>
  </body>
</html>
